@model List<BloodDonor>
@{
        ViewData["Title"] = "Blood Donor List";

}
<h2>Blood Donor List</h2>
<hr />
<table>
    <thead>
        <tr>
            <th>Picture</th>
            <th>Name</th>
            <th>Blood Group</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Address</th>
            <th>Age</th>
            <th>Last Donation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donor in Model)
        {
            <tr>
                <td>
                    @* @if (!string.IsNullOrEmpty(donor.ProfilePicture) && System.IO.File.Exists(Server.MapPath($"~/images/{donor.ProfilePicture}"))) *@
                    @if (!string.IsNullOrEmpty(donor.ProfilePicture))
                    {
                        <img src="@Url.Content($"~/images/{donor.ProfilePicture}")" alt="Profile Picture" style="width:50px;height:50px;" />
                    }
                    else    
                    {
                        <img src="@Url.Content("~/images/default-profile.png")" alt="Default Profile Picture" style="width:50px;height:50px;" />
                    }
                </td>
            <tr>
                <td><img src="@Url.Content($"~/images/{donor.ProfilePicture}")" alt="Profile Picture" style="width:50px;height:50px;" /></td>
                <td>@donor.Name</td>
                <td>@donor.BloodGroup.ToString()</td>
                <td>@donor.ContactNumber</td>
                <td>@donor.Email</td>
                <td>@donor.Address</td>
                <td>@(DateTime.Now.Year - donor.DateOFBirth.Year)</td> <!-- বয়স -->
                <td>@donor.LastDonationDate?.ToShortDateString()</td>
                <td>
                    <!-- এখানে Edit বা Delete বাটন দিতে পারেন -->
                </td>
            </tr>
            </tr>
        }
    </tbody>
</table>
